        /* Style pour le logo lui-même */
        .logo-img {
            width: 60px; /* Définissez la largeur du logo selon vos besoins */
            height: 60px; /* Garantit que l'aspect ratio de l'image est préservé */
            border-radius: 50%; /* Applique un bord arrondi pour un effet de cercle */
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Ajoute une légère ombre */
        }
        .jumbotron {
    background-image: url('{{ asset('assets/images/im4.jpeg') }}');
    background-size: cover;
    color: white;
    animation: fadeIn 1s ease-in-out; /* Use fadeIn for entrance animation */
    height: 500px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.5s ease;
    border-radius: 20px;
    box-shadow: 0px 0px 20px 0px rgba(0, 0, 0, 0.5);
}

.jumbotron:hover {
    background-color: #343a40;
    animation: scaleOut 1s ease-in-out; /* Use scaleOut for exit animation on hover */
}

@keyframes fadeIn {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}

@keyframes scaleOut {
    0%, 100% {
        transform: scale(1);
        background-color: #28a745;
    }
    50% {
        transform: scale(0.8);
        background-color: #007bff;
    }


}

